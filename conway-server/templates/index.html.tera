<!DOCTYPE html>
<html lang="en">
<head>

	<!-- basic page needs
	–––––––––––––––––––––––––––––––––––––––––––––––––– -->
	<meta charset="utf8">
	<title>{{ title }}</title>
	<meta name="description" content="A web app that allows the user to configure and run a Conway's Game of Life simulation.">

  <!-- mobile-specific meta
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- font
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Raleway:400,300,600">
	<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  <!-- css
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
	<link rel="stylesheet" href="static/css/normalize.css">
	<link rel="stylesheet" href="static/css/skeleton.css">
	<link rel="stylesheet" href="static/style.css">

  <!-- favicon
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
	<link rel="icon" type="image/png" href="static/images/favicon.png">

</head>
<body>

  <!-- main page layout
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
	<div class="container">

		<header class="row"><h1>Conway's Game of Life</h1></header>

		<div class="row" id="control-panel">
			<form id="grid-form">
				<textarea id="grid-field" rows="20" cols="20" wrap="off"
						autocomplete="off" spellcheck="false" autocapitalize="none"
						placeholder="Enter your starting grid here.	Use 'x' for living cells
						and '.' for dead cells. Each line will become a row in the grid."
					>{{ default_grid | trim }}</textarea>
				<div>
					<button type="submit" id="grid-submit">Start / Restart</button>
				</div>
			</form>
		</div>

		<div class="row" id="status-box">
			<div id="status-label">status</div>
			<div id="status-output">Connecting...</div>
		</div>

		<div class="row" id="game">
			<pre id="grid-output"></pre>
		</div>

		<div class="row" id="controls">
			<div class="one column">
				<button id="btn-play" class="fa fa-play"
						type="button" value="play"></button>
			</div>
			<div class="one column">
				<button id="btn-pause" class="fa fa-pause"
						type="button" value="pause"></button>
			</div>
			<div class="one column">
				<button id="btn-step" class="fa fa-step-forward"
						type="button" value="step"></button>
			</div>
			<div class="one column">
				<button id="btn-scroll-up" class="fa fa-chevron-circle-up"
						type="button" value="scroll (0, -2)"></button>
			</div>
			<div class="one column">
				<button id="btn-scroll-down" class="fa fa-chevron-circle-down"
					 type="button" value="scroll (0, 2)"></button>
			</div>
			<div class="one column">
				<button id="btn-scroll-left" class="fa fa-chevron-circle-left"
						type="button" value="scroll (-2, 0)"></button>
			</div>
			<div class="one column">
				<button id="btn-scroll-right" class="fa fa-chevron-circle-right"
						type="button" value="scroll (2, 0)"></button>
			</div>
		</div>

	</div>

	<!-- scripts
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
	<script src="static/index.js"></script>

	<!-- end document
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
</body>
</html>
