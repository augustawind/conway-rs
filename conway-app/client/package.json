{
  "name": "conway-app",
  "version": "0.1.0",
  "description": "A browser interface to Conway's Game of Life.",
  "author": "Dustin Rohde",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "browserify": "^16.2.2",
    "watchify": "^3.11.0"
  },
  "scripts": {
    "lint": "eslint **/*.js",
    "clean": "rm -rf dist/*",
    "cp-static": "cp -r $(find src/* -maxdepth 0 ! -name  '*.js' | xargs) dist/",
    "build-js": "browserify src/index.js --outfile dist/main.js",
    "build": "npm run clean && npm run cp-static && npm run build-js",
    "watch": "watchify src/index.js --outfile dist/main.js"
  },
  "main": "src/index.js"
}
